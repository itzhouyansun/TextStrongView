<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextStrongView">
        <!-- 左边图片宽高 -->
        <attr name="drawableLeftWidth" format="dimension"/>
        <attr name="drawableLeftHeight" format="dimension"/>
        <!-- 顶部图片宽高 -->
        <attr name="drawableTopWidth" format="dimension"/>
        <attr name="drawableTopHeight" format="dimension"/>
        <!-- 右边图片宽高 -->
        <attr name="drawableRightWidth" format="dimension"/>
        <attr name="drawableRightHeight" format="dimension"/>
        <!-- 底部图片宽高 -->
        <attr name="drawableBottomWidth" format="dimension"/>
        <attr name="drawableBottomHeight" format="dimension"/>
        <!-- 图片 -->
        <attr name="drawableLeft" format="reference|color"/>
        <attr name="drawableTop" format="reference|color"/>
        <attr name="drawableRight" format="reference|color"/>
        <attr name="drawableBottom" format="reference|color"/>
        <!-- 图片被选中 -->
        <attr name="drawableLeftSelected" format="reference|color"/>
        <attr name="drawableTopSelected" format="reference|color"/>
        <attr name="drawableRightSelected" format="reference|color"/>
        <attr name="drawableBottomSelected" format="reference|color"/>
        <!-- 裁剪圆角 -->
        <attr name="radius" format="dimension"/>
        <attr name="radiusTopLeft" format="dimension"/>
        <attr name="radiusTopRight" format="dimension"/>
        <attr name="radiusBottomLeft" format="dimension"/>
        <attr name="radiusBottomRight" format="dimension"/>
        <!-- 图片文字居中（只能单方向） -->
        <attr name="isTextDrawableCenter" format="boolean"/>
        <!-- 边框颜色 -->
        <attr name="strokeColor" format="color"/>
        <!-- 边框宽度 -->
        <attr name="strokeWidth" format="dimension"/>
        <!-- 边框虚线长度 -->
        <attr name="strokeDashWidth" format="dimension"/>
        <!-- 边框虚线间隙 -->
        <attr name="strokeDashGap" format="dimension"/>
        <!-- 边框圆角 -->
        <attr name="strokeRadius" format="dimension"/>
        <attr name="strokeRadiusTopLeft" format="dimension"/>
        <attr name="strokeRadiusTopRight" format="dimension"/>
        <attr name="strokeRadiusBottomLeft" format="dimension"/>
        <attr name="strokeRadiusBottomRight" format="dimension"/>
        <!-- 阴影半径 -->
        <attr name="shadowElevation" format="dimension"/>
        <!-- 阴影颜色 -->
        <attr name="shadowColor" format="reference|color"/>
        <!-- 阴影画笔填充颜色 -->
        <attr name="shadowBackground" format="reference|color"/>
        <!-- 是否剪切阴影画笔填充区域 -->
        <attr name="clipShadowPath" format="boolean"/>
        <!-- 阴影偏移（dp、px等等）-->
        <attr name="shadow_x" format="dimension"/>
        <!-- 阴影偏移（dp、px等等）-->
        <attr name="shadow_y" format="dimension"/>
        <!-- 阴影圆角 -->
        <attr name="shadowRadius" format="dimension"/>
        <attr name="shadowRadiusTopLeft" format="dimension"/>
        <attr name="shadowRadiusTopRight" format="dimension"/>
        <attr name="shadowRadiusBottomLeft" format="dimension"/>
        <attr name="shadowRadiusBottomRight" format="dimension"/>
        <!-- 渐变圆角 -->
        <attr name="gradientRadius" format="dimension"/>
        <attr name="gradientRadiusTopLeft" format="dimension"/>
        <attr name="gradientRadiusTopRight" format="dimension"/>
        <attr name="gradientRadiusBottomLeft" format="dimension"/>
        <attr name="gradientRadiusBottomRight" format="dimension"/>
        <!-- 渐变颜色-开始 -->
        <attr name="gradientColorStart" format="reference|color"/>
        <!-- 渐变颜色-结束 -->
        <attr name="gradientColorEnd" format="reference|color"/>
        <!-- 渐变边框宽度 -->
        <attr name="gradientStrokeWidth" format="dimension"/>
        <!-- 渐变边框颜色 -->
        <attr name="gradientStrokeColor" format="reference|color"/>
        <!-- 渐变边框虚线宽度 -->
        <attr name="gradientStrokeDashWidth" format="dimension"/>
        <!-- 渐变边框虚线间隙 -->
        <attr name="gradientStrokeDashGap" format="dimension"/>
    </declare-styleable>
</resources>